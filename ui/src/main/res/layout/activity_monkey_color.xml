<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="activity"
            type="com.example.smonkey_android.feature.monkeycolor.MonkeyColorActivity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".feature.monkeycolor.MonkeyColorActivity">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.27"/>

        <ImageButton
            android:id="@+id/bt_back"
            android:layout_width="28dp"
            android:layout_height="25dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="20dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_baseline_arrow_back_24"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/colorView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/guideline"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="-30dp"
            app:layout_constraintBottom_toBottomOf="@id/colorView"
            android:src="@drawable/yummymonkey"/>

        <TextView
            android:id="@+id/smonkeyname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/colorView"
            android:text="망나뇽"
            android:textSize="19dp"
            android:textColor="@color/black"
            android:fontFamily="@font/noto_sans_kr_medium"
            android:layout_marginTop="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        
        <View
            android:id="@+id/View2"
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#CECECE"
            app:layout_constraintTop_toBottomOf="@id/smonkeyname"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/backgroundTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="29dp"
            android:textSize="17dp"
            android:text="배경 설정"
            android:textColor="@color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/View2" />

        <View
            android:id="@+id/View"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/backgroundTitle"/>
        
        <View
            android:id="@+id/View3"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <View
            android:id="@+id/firstoneSeaGreen"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="18dp"
            android:background="@drawable/colorselectdesign"
            android:backgroundTint="@color/AppleGreen"
            app:layout_constraintRight_toLeftOf="@id/firsttwoAppleGreen"
            app:layout_constraintTop_toBottomOf="@id/View"/>

        <View
            android:id="@+id/firsttwoAppleGreen"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="18dp"
            android:background="@drawable/colorselectdesign"
            android:backgroundTint="@color/AppleGreen"
            app:layout_constraintRight_toLeftOf="@id/firstthreeYellowGreen"
            app:layout_constraintTop_toBottomOf="@id/View"/>

        <View
            android:id="@+id/firstthreeYellowGreen"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="9dp"
            android:background="@drawable/colorselectdesign"
            android:backgroundTint="@color/YellowGreen"
            app:layout_constraintRight_toRightOf="@id/View3"
            app:layout_constraintTop_toBottomOf="@id/View"/>

        <View
            android:id="@+id/firstfouryellow"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginTop="22dp"
            android:layout_marginStart="9dp"
            android:background="@drawable/colorselectdesign"
            android:backgroundTint="@color/LightYellow"
            app:layout_constraintLeft_toLeftOf="@id/View3"
            app:layout_constraintTop_toBottomOf="@id/View"/>

        <View
            android:id="@+id/firstfiveorange"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginTop="22dp"
            android:layout_marginStart="18dp"
            android:background="@drawable/colorselectdesign"
            android:backgroundTint="@color/LightOrange"
            app:layout_constraintLeft_toRightOf="@id/firstfouryellow"
            app:layout_constraintTop_toBottomOf="@id/View"/>

        <View
            android:id="@+id/firstsixred"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginTop="22dp"
            android:layout_marginStart="18dp"
            android:background="@drawable/colorselectdesign"
            android:backgroundTint="@color/LightRed"
            app:layout_constraintLeft_toRightOf="@id/firstfiveorange"
            app:layout_constraintTop_toBottomOf="@id/View"/>

        <View
            android:id="@+id/secondoneCerise"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/colorselectdesign"
            android:backgroundTint="@color/Cerise"
            app:layout_constraintLeft_toLeftOf="@id/firstoneSeaGreen"
            app:layout_constraintRight_toRightOf="@id/firstoneSeaGreen"
            app:layout_constraintTop_toBottomOf="@id/firstoneSeaGreen"/>

        <View
            android:id="@+id/secondtwoMagenta"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/colorselectdesign"
            android:backgroundTint="@color/Magenta"
            app:layout_constraintLeft_toLeftOf="@id/firsttwoAppleGreen"
            app:layout_constraintRight_toRightOf="@id/firsttwoAppleGreen"
            app:layout_constraintTop_toBottomOf="@id/firsttwoAppleGreen"/>

        <View
            android:id="@+id/secondthreeLightCoral"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/colorselectdesign"
            android:backgroundTint="@color/IndianRed"
            app:layout_constraintLeft_toLeftOf="@id/firstthreeYellowGreen"
            app:layout_constraintRight_toRightOf="@id/firstthreeYellowGreen"
            app:layout_constraintTop_toBottomOf="@id/firstthreeYellowGreen"/>

        <View
            android:id="@+id/secondfourBisqure"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/colorselectdesign"
            android:backgroundTint="@color/LightCoral"
            app:layout_constraintLeft_toLeftOf="@id/firstfouryellow"
            app:layout_constraintRight_toRightOf="@id/firstfouryellow"
            app:layout_constraintTop_toBottomOf="@id/firstfouryellow"/>

        <View
            android:id="@+id/secondfiveBiossom"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/colorselectdesign"
            android:backgroundTint="@color/Blossom"
            app:layout_constraintLeft_toLeftOf="@id/firstfiveorange"
            app:layout_constraintRight_toRightOf="@id/firstfiveorange"
            app:layout_constraintTop_toBottomOf="@id/firstfiveorange"/>

        <View
            android:id="@+id/secondsixpink"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/colorselectdesign"
            android:backgroundTint="@color/Pink"
            app:layout_constraintLeft_toLeftOf="@id/firstsixred"
            app:layout_constraintRight_toRightOf="@id/firstsixred"
            app:layout_constraintTop_toBottomOf="@id/firstsixred"/>

        <View
            android:id="@+id/thirdonedarkpink"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/colorselectdesign"
            android:backgroundTint="@color/DarkPink"
            app:layout_constraintLeft_toLeftOf="@id/secondoneCerise"
            app:layout_constraintRight_toRightOf="@id/secondoneCerise"
            app:layout_constraintTop_toBottomOf="@id/secondoneCerise"/>

        <View
            android:id="@+id/thirdtwoPlum"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/colorselectdesign"
            android:backgroundTint="@color/Plum"
            app:layout_constraintLeft_toLeftOf="@id/secondtwoMagenta"
            app:layout_constraintRight_toRightOf="@id/secondtwoMagenta"
            app:layout_constraintTop_toBottomOf="@id/secondtwoMagenta"/>

        <View
            android:id="@+id/thirdthreeSkyBlue"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/colorselectdesign"
            android:backgroundTint="@color/SkyBlue"
            app:layout_constraintLeft_toLeftOf="@id/secondthreeLightCoral"
            app:layout_constraintRight_toRightOf="@id/secondthreeLightCoral"
            app:layout_constraintTop_toBottomOf="@id/secondthreeLightCoral"/>

        <View
            android:id="@+id/thirdfourLightAqua"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/colorselectdesign"
            android:backgroundTint="@color/LightAqua"
            app:layout_constraintLeft_toLeftOf="@id/secondfourBisqure"
            app:layout_constraintRight_toRightOf="@id/secondfourBisqure"
            app:layout_constraintTop_toBottomOf="@id/secondfourBisqure"/>

        <View
            android:id="@+id/thirdfiveLightBlue"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/colorselectdesign"
            android:backgroundTint="@color/LightBlue"
            app:layout_constraintLeft_toLeftOf="@id/secondfiveBiossom"
            app:layout_constraintRight_toRightOf="@id/secondfiveBiossom"
            app:layout_constraintTop_toBottomOf="@id/secondfiveBiossom"/>

        <View
            android:id="@+id/thirdsixViolet"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/colorselectdesign"
            android:backgroundTint="@color/Violet"
            app:layout_constraintLeft_toLeftOf="@id/secondsixpink"
            app:layout_constraintRight_toRightOf="@id/secondsixpink"
            app:layout_constraintTop_toBottomOf="@id/secondsixpink"/>

        <View
            android:id="@+id/fouroneOrchid"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/colorselectdesign"
            android:backgroundTint="@color/Orchid"
            app:layout_constraintLeft_toLeftOf="@id/thirdonedarkpink"
            app:layout_constraintRight_toRightOf="@id/thirdonedarkpink"
            app:layout_constraintTop_toBottomOf="@id/thirdonedarkpink"/>

        <View
            android:id="@+id/fourtwoPurple"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/colorselectdesign"
            android:backgroundTint="@color/Purple"
            app:layout_constraintLeft_toLeftOf="@id/thirdtwoPlum"
            app:layout_constraintRight_toRightOf="@id/thirdtwoPlum"
            app:layout_constraintTop_toBottomOf="@id/thirdtwoPlum"/>

        <View
            android:id="@+id/fourthreenavy"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/colorselectdesign"
            android:backgroundTint="@color/Navy"
            app:layout_constraintLeft_toLeftOf="@id/thirdthreeSkyBlue"
            app:layout_constraintRight_toRightOf="@id/thirdthreeSkyBlue"
            app:layout_constraintTop_toBottomOf="@id/thirdthreeSkyBlue"/>

        <Button
            android:id="@+id/btComplete"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:text="완료"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:backgroundTint="#935735"
            android:background="@drawable/buttonlogin"
            android:layout_marginHorizontal="25dp"
            android:layout_marginBottom="25dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>