<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ib"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/happysmonkey"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/namelevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="유현명 1등"
            android:textColor="@color/black"
            android:textSize="13dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="14dp"
            app:layout_constraintLeft_toRightOf="@id/ib"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/smonkeynamestep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="망나뇽 2단계"
            app:layout_constraintLeft_toRightOf="@id/ib"
            android:textSize="9dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="14dp"
            app:layout_constraintTop_toBottomOf="@id/namelevel"/>

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="0dp"
            android:layout_height="5dp"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:progress="7"
            android:max="10"
            android:progressBackgroundTint="#EAEAEA"
            android:progressTint="#935735"
            android:layout_marginHorizontal="12dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/smonkeynamestep"
            app:layout_constraintLeft_toRightOf="@id/ib"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>