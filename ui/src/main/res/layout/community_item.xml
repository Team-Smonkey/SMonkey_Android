<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="item"
            type="com.example.smonkey_android.feature.community.CommunityAdapter" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <View
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:background="#E4E4E4"
            app:layout_constraintTop_toTopOf="parent"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImage"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/monkey"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/top"/>

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="유현명"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:fontFamily="@font/noto_sans_kr_regular"
            app:layout_constraintLeft_toRightOf="@id/profileImage"
            app:layout_constraintTop_toTopOf="@id/profileImage"
            app:layout_constraintBottom_toBottomOf="@id/profileImage"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제목제목제목"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:fontFamily="@font/noto_sans_kr_medium"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="18dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profileImage"/>

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내용내용내용"
            android:textSize="13dp"
            android:textColor="@color/black"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <View
            android:id="@+id/View2"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="28dp"
            android:background="#EEEEEE"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/content"/>

        <ImageButton
            android:id="@+id/heart"
            android:layout_width="25dp"
            android:layout_height="18dp"
            android:layout_marginStart="40dp"
            android:src="@drawable/heart"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:layout_marginTop="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/View2"/>

        <TextView
            android:id="@+id/heartCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="-1.5dp"
            app:layout_constraintLeft_toRightOf="@id/heart"
            app:layout_constraintTop_toTopOf="@id/heart"
            app:layout_constraintBottom_toBottomOf="@id/heart"/>

        <ImageButton
            android:id="@+id/comment"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/comment"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:layout_marginLeft="18dp"
            app:layout_constraintLeft_toRightOf="@id/heartCount"
            app:layout_constraintTop_toTopOf="@id/heart"
            app:layout_constraintBottom_toBottomOf="@id/heart"/>

        <TextView
            android:id="@+id/commentCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="-1.5dp"
            app:layout_constraintLeft_toRightOf="@id/comment"
            app:layout_constraintTop_toTopOf="@id/comment"
            app:layout_constraintBottom_toBottomOf="@id/comment"/>

        <TextView
            android:id="@+id/later"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10분전"
            android:textSize="13dp"
            android:textColor="#A1A1A1"
            android:layout_marginTop="2dp"
            android:layout_marginRight="35dp"
            android:fontFamily="@font/noto_sans_kr_regular"
            app:layout_constraintTop_toTopOf="@id/heart"
            app:layout_constraintBottom_toBottomOf="@id/heart"
            app:layout_constraintRight_toRightOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="12dp"
            app:layout_constraintTop_toBottomOf="@id/comment"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
